{
  "name": "nitro-server",
  "private": true,
  "version": "0.0.1",
  "description": "nitro hub prototype",
  "main": "lib/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "db:drop": "dropdb server_wallet_${NODE_ENV}",
    "db:create": "createdb server_wallet_${NODE_ENV}",
    "db:migrate": "npx knex migrate:latest",
    "db:rollback": "npx knex migrate:rollback",
    "db:seed": "npx knex seed:run",
    "test:ci": "GANACHE_PORT=8505 run-s contracts:clear prettier:check chain:ci:test server:test",
    "chain:ci:test": "yarn chain:test --all --ci",
    "chain:test": "npx ganache-then-jest --runInBand -c ./config/jest/jest.chain.config.js",
    "adjudicator-watcher:start": "node lib/wallet/adjudicator-watcher/index.js",
    "adjudicator-watcher:test": "npx ganache-then-jest --runInBand -c ./config/jest/jest.chain.config.js",
    "server:start": "node ./lib/app/server.js",
    "server:test": "npx jest --runInBand -c ./config/jest/jest.config.js",
    "server:watch": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/app/server.ts",
    "build": "npx tsc",
    "prepare": "yarn build",
    "start": "run-s server:start",
    "prestart": "yarn build && npm run db:rollback && npm run db:migrate && npm run db:seed",
    "prettier:check": "npx prettier --check 'src/**/*.{ts,tsx}'",
    "prettier:write": "npx prettier --write 'src/**/*.{ts,tsx}'",
    "contracts:clear": "rm -rf ./build/contracts",
    "contracts:deploy": "npx deploy-contracts"
  },
  "dependencies": {
    "@koa/cors": "2",
    "dotenv": "^6.2.0",
    "dotenv-expand": "^4.2.0",
    "firebase": "^6.2.3",
    "fmg-core": "0.5.9",
    "fmg-nitro-adjudicator": "0.1.4",
    "knex": "^0.13.0",
    "koa": "^2.7.0",
    "koa-body": "^4.0.8",
    "koa-router": "^7.4.0",
    "magmo-devtools": "git+https://github.com/magmo/devtools.git#v0.1.19",
    "magmo-wallet": "^0.2.0",
    "magmo-wallet-common": "^0.0.0",
    "objection": "^1.6.0",
    "pg": "^7.1.2"
  },
  "devDependencies": {
    "@types/config": "^0.0.34",
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.6",
    "@types/knex": "^0.15.2",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.39",
    "@types/node": "^11.13.8",
    "@types/supertest": "^2.0.7",
    "babel-register": "^6.26.0",
    "ganache-cli": "^6.3.0",
    "jest": "^24.0.6",
    "koa-bodyparser": "^4.2.1",
    "node-fetch": "^2.6.0",
    "node-jq": "^1.5.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "supertest": "^3.4.2",
    "truffle": "^5.0.0-beta.2",
    "truffle-hdwallet-provider": "^1.0.4",
    "ts-jest": "^24",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.0.2",
    "tslint-config": "^0.0.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  }
}
