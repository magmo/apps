  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest Chain Current",
      "type": "node",
      "request": "launch",
      "args": [
        "node_modules/.bin/jest",
        "--runInBand",
        "--env=jsdom",
        "--config=${workspaceRoot}/config/jest/jest.chain.config.js",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
