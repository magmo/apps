  "version": "0.2.0",
  "configurations": [

    {
      "name": "Jest All",
      "type": "node",
      "request": "launch",
      "args": [
        "scripts/test.js",
        "--runInBand",
        "--no-cache",
        "--env=jsdom"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Wallet Test Contract Current File",
      "type": "node",
      "request": "launch",
      "args": [
        "node_modules/.bin/jest",
        "--runInBand",
        "--env=jsdom",
        "-c", "${workspaceFolder}/packages/wallet/config/jest/jest.contracts.config.js",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}/packages/wallet",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "RPS Test Contract Current File",
      "type": "node",
      "request": "launch",
      "args": [
        "node_modules/.bin/jest",
        "--runInBand",
        "--env=jsdom",
        "-c", "${workspaceFolder}/packages/rps/config/jest/jest.contracts.config.js",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}/packages/rps",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "RPS Test Current File",
      "type": "node",
      "request": "launch",
      "args": [
        "node_modules/.bin/jest",
        "--runInBand",
        "--env=jsdom",
        "-c", "${workspaceFolder}/packages/rps/config/jest/jest.config.js",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}/packages/rps",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Wallet Test Current File",
      "type": "node",
      "request": "launch",
      "args": [
        "node_modules/.bin/jest",
        "--runInBand",
        "--env=jsdom",
        "-c", "${workspaceFolder}/packages/wallet/config/jest/jest.config.js",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}/packages/wallet",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }

  ],
}